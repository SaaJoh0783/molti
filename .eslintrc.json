{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended"],
    "rules": {
        "complexity": [
            1,
            10
        ],
        "indent": [
            1,
            2
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "modules": false
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
